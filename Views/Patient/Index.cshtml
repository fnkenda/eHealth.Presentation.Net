@model List<Patient>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

	<div class="container">
		<div class="row">
			<div class="col">
				Nom
			</div>
			<div class="col">
				Téléphone
			</div>
			<div class="col">
				EMail
			</div>
			<div class="col">
			</div>
			<div class="col">
			</div>
		</div>
	</div>
	<br />
	foreach (var patient in Model)
	{


		<div class="container">
			<div class="row">
				<div class="col table-primary">
					@patient.name
				</div>
				<div class="col">
					@patient.tel
				</div>
				<div class="col">
					@patient.eMail
				</div>

				<div class="col">
					<a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Patient" asp-action="Edit">Editer</a>
				</div>
				<div class="col">
					<a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Patient" asp-action="Delete">Supprimer</a>
				</div>
			</div>
		</div><br />
	}
	<br />
	<a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Patient" asp-action="Create">Ajouter un patient</a>
}


